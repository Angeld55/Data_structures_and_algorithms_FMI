---
BasedOnStyle: LLVM   # You can change this to Google, WebKit, Mozilla, etc.
IndentWidth: 4       # Sets the indentation width to 4 spaces.
ColumnLimit: 120     # Maximum column width before wrapping.
UseTab: Always
TabWidth: 4
BreakConstructorInitializers: BeforeComma

BraceWrapping:
  AfterClass: true             # Place the opening brace on a new line after class declarations.
  AfterControlStatement: true  # Place the opening brace on a new line after if, else, for, while, etc.
  AfterEnum: true              # Place the opening brace on a new line after enum declarations.
  AfterFunction: true          # Place the opening brace on a new line after function declarations.
  AfterNamespace: true         # Place the opening brace on a new line after namespace declarations.
  AfterStruct: true            # Place the opening brace on a new line after struct declarations.
  AfterUnion: true             # Place the opening brace on a new line after union declarations.
  BeforeCatch: true            # Place the opening brace on a new line before 'catch'.
  BeforeElse: true             # Place the opening brace on a new line before 'else'.
  IndentBraces: false          # Don't indent the opening brace itself.
  SplitEmptyFunction: false    # Keeps braces for empty functions on the same line.
  SplitEmptyRecord: false      # Keeps braces for empty structs/classes on the same line.

AlignAfterOpenBracket: DontAlign  # Avoid aligning arguments in function calls after open bracket.
BreakBeforeBraces: Custom         # Enable custom brace wrapping rules (defined above).
AllowShortFunctionsOnASingleLine: Empty  # Short functions with no body stay on a single line.
AllowShortIfStatementsOnASingleLine: false  # Forces 'if' statements to break before braces.
AllowShortLoopsOnASingleLine: false # Forces 'for'/'while' loops to break before braces.
PointerAlignment: Left
AlwaysBreakTemplateDeclarations: Yes